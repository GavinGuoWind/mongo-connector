<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>scm-master-pom</artifactId>
		<groupId>com.despegar.scm</groupId>
		<version>1.0.7</version>
	</parent>
	<groupId>com.despegar.integration</groupId>
	<artifactId>mongo-connector</artifactId>
	<version>0.1.6-SNAPSHOT</version>
	<name>Mongo Connector</name>
	<description>Helper component to connect to mongo fast and easy</description>


	<scm>
		<connection>scm:git:git@gitlab.despegar.it:java-library/mongo-connector.git</connection>
		<developerConnection>scm:git:git@gitlab.despegar.it:java-library/mongo-connector.git</developerConnection>
		<url>scm:git:git@gitlab.despegar.it:java-library/mongo-connector.git</url>
	</scm>

	<properties>
		<mongo-jackson-mapper.version>2.0</mongo-jackson-mapper.version>
		<spring-mongodb.version>1.3.2.RELEASE</spring-mongodb.version>
		<commons-lang.version>2.6</commons-lang.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>${commons-lang.version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-beans</artifactId>
			<version>3.0.7.RELEASE</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>3.2.1</version>
		</dependency>
		<dependency>
			<groupId>com.despegar.integration</groupId>
			<artifactId>domain</artifactId>
			<version>0.0.5</version>
		</dependency>
		<dependency>
			<groupId>net.vz.mongodb.jackson</groupId>
			<artifactId>mongo-jackson-mapper</artifactId>
			<version>${mongo-jackson-mapper.version}</version>
		</dependency>
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
			<version>13.0.1</version>
		</dependency>
		<dependency>
			<groupId>org.springframework.data</groupId>
			<artifactId>spring-data-mongodb</artifactId>
			<version>${spring-mongodb.version}</version>
			<exclusions>
				<exclusion>
					<artifactId>spring-beans</artifactId>
					<groupId>org.springframework</groupId>
				</exclusion>
				<exclusion>
					<artifactId>spring-expression</artifactId>
					<groupId>org.springframework</groupId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>
</project>